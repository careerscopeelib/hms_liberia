{
  "name": "hospital-management-backend",
  "version": "1.0.0",
  "description": "Hospital Management System API - Node.js with PostgreSQL or SQLite",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "stop:pm2": "pm2 stop uhpcms-api",
    "restart:pm2": "pm2 restart uhpcms-api",
    "dev": "node server.js",
    "init-db:sqlite": "node scripts/init-db-sqlite.js",
    "init-db:postgres": "node scripts/init-db-postgres.js",
    "seed-uhpcms": "node scripts/seed-uhpcms.js"
  },
  "engines": { "node": ">=16" },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "sql.js": "^1.14.0"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}
