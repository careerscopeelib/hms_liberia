# Database: sqlite | postgres (or set DATABASE_URL for Render/Postgres)
DB_TYPE=sqlite

# SQLite (when DB_TYPE=sqlite)
SQLITE_PATH=./data/hospital.db

# PostgreSQL (when DB_TYPE=postgres or DATABASE_URL is set)
# On Render: set DATABASE_URL in the API service Environment (from Postgres service).
# Or set these and the app will build the connection URL (use full host, e.g. dpg-xxx-a.oregon-postgres.render.com):
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=hospital
PG_USER=postgres
PG_PASSWORD=

# Server (Render sets PORT automatically)
PORT=3000

# Production: set in Render Environment
# CORS_ORIGIN=https://your-frontend.onrender.com
# JWT_SECRET=<generate a random string>
